package gtt;

import java.util.ArrayList;

public class Server {
	public static int cmmdc(int a, int b) {
		if (a == b)
			return a;
		else if (a > b)
			return cmmdc(a - b, b);
		else
			return cmmdc(a, b - a);
	}

	public static ArrayList<Integer> firstCmmdc(ArrayList<Client> clients) {
		ArrayList<Integer> values = new ArrayList<>();
		for (int i = 0; i < clients.size() - 1; i++) {
			values.add(cmmdc(clients.get(i).value, clients.get(i + 1).value));
		}
		values.add(cmmdc(clients.get(0).value,
				clients.get(clients.size() - 1).value));

		return values;
	}

	public static ArrayList<Integer> cmmdcArrayList(ArrayList<Integer> values) {
		ArrayList<Integer> values2 = new ArrayList<>();

		for (int i = 0; i < values.size() - 1; i++) {
			values2.add(cmmdc(values.get(i), values.get(i + 1)));
		}
		values2.add(cmmdc(values.get(0), values.get(values.size() - 1)));

		return values2;
	}

	public static boolean flag(ArrayList<Integer> values) {
		for (int i = 0; i < values.size() - 1; i++) {
			if (values.get(i) != values.get(i + 1)) {
				return false;
			}
		}
		if (values.get(0) != values.get(values.size() - 1)) {
			return false;
		}
		return true;
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		ArrayList<Client> clients = new ArrayList<>();
		Client client5 = new Client("7ZJP8", 84);
		Client client4 = new Client("8woNW", 96);
		Client client3 = new Client("u4yuZ", 114);
		Client client2 = new Client("Oz2Yc", 72);
		Client client1 = new Client("97bwa", 102);
		Client client0 = new Client("F0Llh", 104);
		clients.add(client5);
		clients.add(client4);
		clients.add(client3);
		clients.add(client2);
		clients.add(client1);
		clients.add(client0);

		ArrayList<Integer> values = new ArrayList<>();
		values = firstCmmdc(clients);
		while (!flag(values)) {
			values=cmmdcArrayList(values);
		}
		System.out.println(values.toString());
	}

}
